{
  "name": "miraktest",
  "productName": "MirakTest",
  "version": "2.0.0-beta.1",
  "description": "Mirakurun 映像視聴確認用アプリ",
  "author": "ci7lus <7887955+ci7lus@users.noreply.github.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ci7lus/miraktest.git"
  },
  "main": "dist/src/index.electron.js",
  "scripts": {
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "dev:webpack": "webpack --mode development --color -w",
    "build:electron": "electron-builder",
    "build:tsc": "tsc --build tsconfig.tsc.json",
    "build:webpack": "cross-env NODE_ENV=production webpack --mode production",
    "build": "yarn build:webpack && yarn build:tsc && yarn build:electron",
    "lint:prettier": "prettier --check './src/**/*.{js,ts,tsx}'",
    "format:prettier": "prettier --write './src/**/*.{js,ts,tsx}'",
    "lint:eslint": "eslint --max-warnings 0 --cache './src/**/*.{js,ts,tsx}'",
    "format:eslint": "eslint './src/**/*.{js,ts,tsx}' --cache --fix",
    "build:dts-plugin": "yarn dts-bundle-generator --export-referenced-types=false --external-inlines=electron -o dist/plugin.d.ts --no-check src/types/plugin.ts && ts-node setLicenseInDts.ts && prettier --write dist/plugin.d.ts"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --max-warnings 0 --cache",
    "*.{js,ts,tsx,md}": "prettier"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-transform-modules-commonjs": "^7.15.4",
    "@babel/plugin-transform-react-jsx": "^7.14.9",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/plugin-transform-typescript": "^7.15.4",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@babel/runtime": "^7.15.4",
    "@ci7lus/eslint-config": "^1.0.1",
    "@tailwindcss/custom-forms": "^0.2.1",
    "@types/esm": "^3.2.0",
    "@types/mini-css-extract-plugin": "^2.3.0",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/yarnpkg__lockfile": "^1.1.5",
    "@yarnpkg/lockfile": "^1.1.0",
    "autoprefixer": "^10.3.6",
    "babel-loader": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.3.0",
    "dts-bundle-generator": "^5.9.0",
    "electron": "^12.1.2",
    "electron-builder": "^22.11.7",
    "husky": "^7.0.2",
    "jest": "^27.2.2",
    "lint-staged": "^11.1.2",
    "mini-css-extract-plugin": "^2.3.0",
    "node-loader": "^2.0.0",
    "postcss": "^8.3.8",
    "postcss-loader": "^6.1.1",
    "prettier": "^2.4.1",
    "sass": "^1.42.1",
    "sass-loader": "^12.1.0",
    "tailwindcss": "^2.2.16",
    "tailwindcss-textshadow": "^2.1.3",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3",
    "webpack": "^5.54.0",
    "webpack-cli": "^4.8.0"
  },
  "dependencies": {
    "@headlessui/react": "^1.4.1",
    "aribb24.js": "^1.7.11",
    "axios": "^0.21.4",
    "clsx": "^1.1.1",
    "dayjs": "^1.10.7",
    "electron-store": "^8.0.1",
    "esm": "^3.2.25",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-feather": "^2.0.9",
    "react-use": "^17.3.1",
    "recoil": "^0.4.1",
    "webchimera.js": "^0.5.2",
    "zod": "^3.9.3"
  },
  "peerDependencies": {
    "eslint": "^7.32.0"
  },
  "cmake-js": {
    "runtime": "electron",
    "runtimeVersion": "12.1.2"
  },
  "browserslist": "electron 12.0.0"
}
